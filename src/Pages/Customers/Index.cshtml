@page
@model IndexModel

<h1>Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customer)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@customer.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-page="./Create">Create New</a>